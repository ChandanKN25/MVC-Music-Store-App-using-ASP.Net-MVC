<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar@*-fixed-top*@">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>

            <div class="nav navbar-nav">
                @{
                    if (User.Identity.IsAuthenticated)
                    {
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("Create User", "CreateUser", "Account", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("Edit User", "EditUser", "Home", new { area = "" }, null)</li>

                            <li>@Html.ActionLink("User List", "UserList", "Home", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("Employee List", "Index", "Employees", new { area = "" }, null)</li>
                            
                           

                            @if (User.IsInRole("Admin"))
                            {
                                <li>@Html.ActionLink("Delete User", "DeleteUser", "Home", new { area = "" }, null)</li>
                            }
                        </ul>

                        <ul class="nav navbar-nav navbar-right">
                            <li><a class="glyphicon glyphicon-user" style="font-size:14px; color:white">- @User.Identity.Name</a></li>
                            <li>@Html.ActionLink("Logout", "LogOut", "Account", new { area = "" }, null)</li>
                        </ul>


                    }

                    else
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Login", "Login", "Account", new { area = "" }, htmlAttributes: new { @class = "glyphicon glyphicon-user" })</li>
                            <li><a class="glyphicon glyphicon-circle-arrow-right"></a></li>
                        </ul>


                    }







                   


                }
            </div>
        </div>
    </div>
   
   


    <div class="container body-content">
        @RenderBody()

        <hr />
        <footer>
            @*<p>&copy; @DateTime.Now.Year - iLead 2021 Application</p>*@
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>

